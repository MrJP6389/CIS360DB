CREATE TABLE ACCOUNTS(
	ADDRESS 	VARCHAR(20) 	NOT NULL,
  CARDNUMBER 	NUMBER 		NOT NULL,
	PLAYLIST 	VARCHAR(10) ,
	FAVORITEARTIST 	VARCHAR(15) ,
	EMAIL 		VARCHAR(20) 	NOT NULL,
	ACCOUNTID 	VARCHAR(20) 	NOT NULL,
	ACCTNAME 		VARCHAR(10) 	NOT NULL,
	BIRTHDATE 	DATE 		NOT NULL,
	PRIMARY KEY (ACCOUNTID)
);
CREATE TABLE SUBSCRIPTION(
	SUBID 		 VARCHAR(5) 	NOT NULL,
	FAVORITEARTIST 	 VARCHAR(20),
	EDITSUBSCRIPTION NUMBER, 
	SUBSCRIBETYPE 	 NUMBER 	NOT NULL,
	CCARDNUMBER 	 NUMBER 	NOT NULL,
	BILLADDRESS 	 VARCHAR(20) 	NOT NULL,
	PRIMARY KEY (SUBID)
	--FOREIGN KEY (BILLADDRESS) REFERENCES ACCOUNTS(ADDRESS)
);
CREATE TABLE ARTISTS(
	ARTISTID 	VARCHAR(5) 	NOT NULL,
	FIRSTNAME 	VARCHAR(10) 	NOT NULL,
	LASTNAME 	VARCHAR(10),
	PRIMARY KEY (ARTISTID)
);
CREATE TABLE SONG(
	SONGID 		VARCHAR(5) 	NOT NULL,
	TITLE 		VARCHAR(20) 	NOT NULL,
	ARTIST 		VARCHAR(5) 	NOT NULL,
	ALBUM 		VARCHAR(5) ,
	RELEASEDATE 	DATE 		NOT NULL,
	SSINGLE NUMBER(1) NOT NULL CHECK  (SSINGLE in (0,1)),
	SLENGTH 		DECIMAL 	NOT NULL,
	PRIMARY KEY (SONGID),
	FOREIGN KEY (ARTIST) REFERENCES ARTISTS(ARTISTID)
	ON DELETE CASCADE
	--FOREIGN KEY (ALBUM) REFERENCES ALBUMS(ALBUMID)
	--ON DELETE CASCADE
);
CREATE TABLE ALBUMS(
	ALBUMID 	VARCHAR(5) 	NOT NULL,
	NOOFSONGS 	NUMBER 		NOT NULL,
	SONGS 		VARCHAR(5) 	NOT NULL,
	TITLE 		VARCHAR(20) 	NOT NULL,
	ARTIST 		VARCHAR(5) 	NOT NULL,
	RELEASEDATE 	DATE 		NOT NULL,
	PRIMARY KEY (ALBUMID),
	FOREIGN KEY (SONGS) REFERENCES SONG(SONGID)
	ON DELETE CASCADE,
	FOREIGN KEY (ARTIST) REFERENCES ARTISTS(ARTISTID)
	ON DELETE CASCADE
);
CREATE Table Playlist(
	PSubId		VARCHAR(5)	NOT NULL,
	PSongId		VARCHAR(5)	NOT NULL,
	PName		VARCHAR(10)	NOT NULL,
	PNoOfSongs	INT		NOT NULL,
	Primary Key (PName),
	Foreign Key (PSubId) REFERENCES SUBSCRIPTION (SubId),
	Foreign Key (PSongId) REFERENCES Song (SongId)
);
CREATE Table PlaySongs(
	PlayName	VARCHAR(10)	NOT NULL,
	PlaySongs	VARCHAR(10)	NOT NULL,
	PRIMARY KEY (PlaySongs),
	FOREIGN KEY (PlayName) REFERENCES Playlist(PName)
);
